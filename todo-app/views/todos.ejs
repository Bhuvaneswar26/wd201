<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo-Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css">
    <script>
    async function checkhandle(id, status) {
        console.log("Function called with ID:", id, "and status:", status);
        try {
          const response = await fetch(`/todos/${id}`, {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ completed: status }),
          });
      
          if (response.ok) {
            console.log("Todo item updated successfully");
            window.location.reload();
          } else {
            console.error("Failed to update todo item");
          }
        } catch (error) {
          console.error("Error:", error);
        }
      }
      async function deletehandle(id) {
    console.log("Function called with ID:", id);
    try {
        const response = await fetch(`/todos/${id}`, {
            method: "DELETE",
            headers: {
                "Content-Type": "application/json",
            },
        });

        if (response.ok) {
            console.log("Todo item deleted successfully");
            window.location.reload();
        } else {
            console.error("Failed to delete todo item");
        }
    } catch (error) {
        console.error("Error:", error);
    }
}

</script>      
</head>
<body style="margin: 5rem;">
<%- include("header.ejs") %>
<a href="/signout">Sign out</a>
<form action="/todos" method="post">
    <div class="flex gap-2 py-4">
        <div class="flex-auto">
            <input type="text" name="title" placeholder="What's next?" required  class="border border-gray-300 text-gray-900 w-full p-2 text-sm">
        </div>
        <div class="flex-auto">
            <input type="date" name="dueDate" required class="border border-gray-300 text-gray-900 w-full p-2 text-sm leading-4">
        </div>
        <div class="flex-auto">
            <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Add</button>
        </div>
    </div>
  </form>
<div>
  <h5>Overdue</h5>
  <h6 id="count-overdue"><%= overdues.length %></h6>
<ul class="list-none">
<% for(let i = 0; i < overdues.length; i++){  %>
    <li class="Todo-Item">
        <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-purple-50">
            <input type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-300 rounded" id="todo-checkbox-<%= overdues[i].id %>" <%= overdues[i].completed ? "checked" : "" %> >  
            <label for="todo-checkbox-<%= overdues[i].id %>" class="ml-2 text-sm text-gray-600 cursor-pointer" onclick="checkhandle(<%= overdues[i].id %>,<%= overdues[i].completed %>)"><%= overdues[i].title %></label>        
            <a href="" class="Todo-icon ml-2" onclick="deletehandle(<%= overdues[i].id %>)">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
          </a>
          
        </div>
          
    </li>
<% } %>
</ul>
